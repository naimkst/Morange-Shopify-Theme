<!-- start of features-section -->
<section class="features-section section-padding pt-0">
  <div class="container">
    <div class="features-wrap">
      <div class="row">
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="features-text">
            <i><img src="assets/images/icon/1.svg" alt=""></i>
            <h2>Free Delivery</h2>
            <p>For orders over $60</p>
          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="features-text">
            <i><img src="assets/images/icon/2.svg" alt=""></i>
            <h2>After-Sale Service</h2>
            <p>24/7 support</p>
          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="features-text">
            <i><img src="assets/images/icon/3.svg" alt=""></i>
            <h2>Buyer Protection</h2>
            <p>100% secure payment system</p>
          </div>
        </div>
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="features-text">
            <i><img src="assets/images/icon/4.svg" alt=""></i>
            <h2>Special Discounts</h2>
            <p>Guaranteed saving all the time</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- end of product-section -->

{% schema %}
{
  "name": "Service Section",
  "settings": [],
  "blocks": [
    {
      "name": "Service Item",
      "type": "slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "service_image",
          "label": "Service Image"
        },
        {
          "type": "text",
          "id": "service_title",
          "label": "Service Title",
          "default": "FREE DELIVERY"
        },
        {
          "type": "text",
          "id": "service_description",
          "label": "Service Description",
          "default": "For orders over $60"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service Section",
      "blocks": [
        {
          "type": "slider"
        }
      ]
    }
  ]
}
{% endschema %}
