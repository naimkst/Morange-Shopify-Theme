<!-- start of static-hero-slide-section -->
<section
  class="static-hero"
  style="background: url({{ section.settings.banner_image | image_url: width: 1920 }}) no-repeat center center;"
>
  <div class="container">
    <div class="hero-content">
      {% comment %} <span>HOME / {{ page_title }}</span> {% endcomment %}
      <h2>{{ section.settings.product_banner_title }}</h2>
      <p>
        {{ section.settings.product_banner_description }}
      </p>
    </div>
  </div>
</section>
<!-- end of static-hero-slide-section -->
{% schema %}
{
  "name": "Product Banner Section",
  "settings": [
    {
      "type": "text",
      "id": "product_banner_title",
      "label": "Banner Title",
      "default": "Spotlight On"
    },
    {
      "type": "text",
      "id": "product_banner_description",
      "label": "Banner Description",
      "default": "Stay ahead of the fashion curve! Discover your one-stop shop for all the newest releases, collections and trends of the moment."
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Product Banner Section"
    }
  ]
}
{% endschema %}
