<form class="filter-form" id="filterFrom">
  <div class="filter-area">
    <div class="container">
      <div class="filter-top">
        <div class="row">
          <div class="col-lg-8">
            <div class="filter-item-wrap">
              <div class="filter-item">
                <select onchange="location = this.value">
                  <option value="">Categories</option>
                  {% for pdcollection in collections %}
                    <option
                      value="{{ pdcollection.url }}"
                      {% if pdcollection.url == collection.url %}
                        selected
                      {% endif %}
                    >
                      {{ pdcollection.title }}
                    </option>
                  {% endfor %}
                </select>
              </div>
              {%- for filter in collection.filters -%}
                <div class="filter-item">
                  <select onchange="filterName(this, {{ forloop.index }})" id="filter_{{ forloop.index }}">
                    <option value="">{{ filter.label }}</option>
                    {%- case filter.type -%}
                      {%- when 'list' -%}
                        {%- for filter_value in filter.values -%}
                          <option
                            value="{{ filter_value.value }}"
                            data-param_name="{{ filter_value.param_name }}"
                            {% if filter_value.active == true %}
                              selected
                            {% endif %}
                          >
                            {{ filter_value.label }}
                          </option>
                        {%- endfor -%}
                    {%- endcase -%}
                  </select>
                  <input
                    type="hidden"
                    name="{{ filter.param_name }}"
                    id="selected_param_name_{{ forloop.index }}"
                    value=""
                  >
                </div>
              {%- endfor -%}
              {% comment %}
                <div class="filter-item">
                  <select>
                    <option value="">Size</option>
                    <option value="">L</option>
                    <option value="">M</option>
                    <option value="">Xl</option>
                    <option value="">XXl</option>
                    <option value="">XXXl</option>
                  </select>
                </div>
                <div class="filter-item">
                  <select>
                    <option value="">occasion</option>
                    <option value="">occasion</option>
                    <option value="">occasion</option>
                    <option value="">occasion</option>
                  </select>
                </div>
                <div class="filter-item">
                  <select>
                    <option value="">fabric</option>
                    <option value="">fabric</option>
                    <option value="">fabric</option>
                    <option value="">fabric</option>
                  </select>
                </div>
              {% endcomment %}
            </div>
          </div>
          <div class="col-lg-4">
            <div class="filter-item-wrap right">
              <div class="filter-item">
                <select>
                  <option value="">Featured</option>
                  <option value="">Featured</option>
                  <option value="">Featured</option>
                  <option value="">Featured</option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="filter-result">
          <ul>
            <li>OUTWEAR <i class="ti-close"></i></li>
            <li><span class="black" style="background: #000;"></span> bLACK <i class="ti-close"></i></li>
            <li class="clear"><i class="ti-close"></i> clear FILTERS</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</form>
